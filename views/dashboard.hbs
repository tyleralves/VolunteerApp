<div class="container">
    <div class="row" id="bodyDiv" data-controller="dashboard" data-action="{{user.role}}">
        <div class="col-md-12">
            <h2>Welcome {{user.displayname}}</h2>
            <h5>Update profile information, view messages, add a picture, and more</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>This is how other users will see your profile:</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>{{user.displayname}}</h4>
                            <h5>Description:</h5>
                            <pre class="preUserInput">{{{user.description}}}</pre>
                        </div>
                        <div class="col-md-4">
                            <a href="/userprofile/{{user.username}}"><img class="img-responsive" src="/uploads/{{user.profileimg}}" /></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h5>User Images:</h5>
                            <div class="row">
                                {{#if userDetails.image_ids}}
                                    {{#userDetails.image_ids}}
                                        <div class="col-md-4">
                                            <img class="img-responsive user-images" src="/uploads/{{filename}}"/>
                                            <button class="user-image-remove" data-imageindex="{{@index}}" data-imageid="{{_id}}"><b>X</b></button>
                                        </div>
                                    {{/userDetails.image_ids}}
                                {{else}}
                                    <div class="col-md-12">This user has not yet uploaded any images.</div>
                                {{/if}}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default nomargin-panel">
                <div class="activateDiv panel-heading">
                    <h4>Update Profile Information:</h4>
                </div>
                <div class="panel-body initialHidden">
                    <form action="/updateuser" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label for="displayname">Display Name:</label>
                            <input type="text" class="form-control" id="displayname" name="displayname" value="{{user.displayname}}" />
                        </div>
                        <div class="form-group">
                            <label for="about">Description of Organization:</label>
                            <textarea id="about" class="form-control" name="about">{{user.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="profileImgUpload">Profile Picture:</label>
                            <input type="file" id="profileImgUpload" name="upl" />
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <strong>Add Images</strong>
                    <form action="/addimages" id="userimages" class="dropzone" method="post">

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
